#!/usr/bin/env ruby

load '../lib/package_manager.rb'

usage = <<EOT
pkg-find-available: Find available packages matching a string
Usage: #{ $0 } [options]
EOT

if ARGV.size < 1
  $stderr.puts 'No search pattern supplied'
  $stderr.puts usage
  exit 1
end

pkg = PackageManager::Base.load
puts pkg.find_available( ARGV )
